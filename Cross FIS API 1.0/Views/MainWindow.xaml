<!-- Views/MainWindow.xaml -->
<Window x:Class="Cross_FIS_API_1._0.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Cross_FIS_API_1._0.ViewModels"
        Title="Cross FIS API 1.0 - Warsaw Stock Exchange Client" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen">
    
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        
        <Style x:Key="CrossOrderButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#E74C3C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="20,10"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
            <TextBlock Text="FIS API Client" FontSize="24" FontWeight="Bold" Foreground="#2C3E50"/>
            <Rectangle Width="2" Fill="#BDC3C7" Margin="15,0"/>
            <StackPanel>
                <TextBlock Text="Warsaw Stock Exchange" FontSize="14" Foreground="#7F8C8D"/>
                <TextBlock Text="{Binding Status}" FontSize="12" FontWeight="Bold" Foreground="#27AE60"/>
            </StackPanel>
        </StackPanel>

        <!-- Connection and Actions Panel -->
        <Border Grid.Row="1" Background="#F8F9FA" Padding="15" Margin="0,0,0,15" CornerRadius="5">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Exchange:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <ComboBox ItemsSource="{Binding Exchanges}" 
                          SelectedItem="{Binding SelectedExchange}"
                          DisplayMemberPath="Name" 
                          Width="200" Margin="0,0,15,0"/>
                
                <Button Content="Connect to FIS" Command="{Binding ConnectCommand}" 
                        Background="#3498DB" Foreground="White" Style="{StaticResource ActionButtonStyle}"/>
                
                <Button Content="Fetch Instruments" Command="{Binding FetchInstrumentsCommand}" 
                        Background="#27AE60" Foreground="White" Style="{StaticResource ActionButtonStyle}"/>
                
                <Button Content="Fetch All" Command="{Binding FetchAllCommand}" 
                        Background="#F39C12" Foreground="White" Style="{StaticResource ActionButtonStyle}"/>
                
                <Button Content="Clear" Command="{Binding ClearInstrumentsCommand}" 
                        Background="#95A5A6" Foreground="White" Style="{StaticResource ActionButtonStyle}"/>
            </StackPanel>
        </Border>

            <!-- Instruments Grid -->
        <!-- Instruments Grid -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Available Instruments" Style="{StaticResource HeaderStyle}"/>
                        <TextBlock Text="{Binding DisplayInstruments.Count, StringFormat=({0} items)}" 
                                   VerticalAlignment="Center" Foreground="#7F8C8D" Margin="10,0,0,0"/>
                    </StackPanel>

                    <DataGrid Grid.Row="1" ItemsSource="{Binding DisplayInstruments}" 
                              SelectedItem="{Binding SelectedInstrument}"
                              AutoGenerateColumns="False" GridLinesVisibility="Horizontal" 
                              HeadersVisibility="Column" CanUserAddRows="False" IsReadOnly="True"
                              AlternatingRowBackground="#F9F9F9">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Symbol" Binding="{Binding Symbol}" Width="100"/>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="ISIN" Binding="{Binding ISIN}" Width="120"/>
                            <DataGridTextColumn Header="GLID" Binding="{Binding GLID}" Width="150"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- Details Panel -->
            <Border Grid.Column="1" Margin="15,0,0,0" Background="White" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5" Padding="10"
                    Visibility="{Binding SelectedDetail, Converter={StaticResource NullToVisibilityConverter}}">
                <ContentControl Content="{Binding SelectedDetail}">
                    <ContentControl.Resources>
                        <DataTemplate DataType="{x:Type vm:InstrumentDetailViewModel}">
                            <StackPanel>
                                <TextBlock Text="Instrument Details" Style="{StaticResource HeaderStyle}"/>
                                <TextBlock Text="{Binding BaseInstrument.Name}" FontWeight="Bold"/>
                                <TextBlock Text="{Binding BaseInstrument.ISIN}" Foreground="#7F8C8D"/>
                                <Separator Margin="0,10"/>
                                <TextBlock Text="Cross Order Instrument:"/>
                                <TextBlock Text="{Binding CrossInstrument.Symbol}" FontWeight="Bold"/>
                                <TextBlock Text="{Binding CrossInstrument.GLID}" Foreground="#7F8C8D"/>
                                <Button Content="Create Cross Order" 
                                        Command="{Binding OpenCrossOrderWindowCommand}" 
                                        Style="{StaticResource CrossOrderButtonStyle}" 
                                        Margin="0,20,0,0"/>
                            </StackPanel>
                        </DataTemplate>
                    </ContentControl.Resources>
                </ContentControl>
            </Border>
        </Grid>

        <!-- Log Panel -->
        <Border Grid.Row="3" Background="White" BorderBrush="#E0E0E0" BorderThickness="1" 
                CornerRadius="5" Padding="10" Margin="0,15,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Activity Log" Style="{StaticResource HeaderStyle}"/>

                <ListBox Grid.Row="1" ItemsSource="{Binding Logs}" 
                         ScrollViewer.HorizontalScrollBarVisibility="Auto"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         Background="#FAFAFA" BorderThickness="0">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Padding" Value="5,2"/>
                            <Setter Property="BorderThickness" Value="0"/>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" FontFamily="Consolas" FontSize="11" Foreground="#2C3E50"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>
    </Grid>
</Window>