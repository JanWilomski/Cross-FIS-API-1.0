
<Window x:Class="Cross_FIS_API_1._0.Views.CrossOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cross_FIS_API_1._0.Views"
        mc:Ignorable="d"
        Title="Nowe Zlecenie Cross" Height="450" Width="800">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Nowe Zlecenie Cross" FontSize="24" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,15"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="0,0,15,0">
                <TextBlock Text="Instrument ID:"/>
                <TextBox Text="{Binding InstrumentId, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Text="Ilość:" Margin="0,10,0,0"/>
                <TextBox Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Text="Cena:" Margin="0,10,0,0"/>
                <TextBox Text="{Binding Price, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>

            <StackPanel Grid.Column="1">
                <TextBlock Text="Konto kupującego:"/>
                <TextBox Text="{Binding BuyerAccount, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Text="Konto sprzedającego:" Margin="0,10,0,0"/>
                <TextBox Text="{Binding SellerAccount, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
        </Grid>

        <Button Grid.Row="2" Content="Wyślij Zlecenie" Command="{Binding SubmitCrossOrderCommand}" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,15,0,0"/>
    </Grid>
</Window>
